<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Blood Report Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background: linear-gradient(to right, #f8f9fa, #e8f0fe); /* soft light background */
      min-height: 100vh;
    }
    .form-wrapper {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <div class="form-wrapper mx-auto" style="max-width: 900px;">
      <h2 class="text-center mb-4">Guru Diagnostic Center - Blood Report</h2>

      <form action="/generate" method="POST">
        <div class="row g-3 mb-3">
          <div class="col-md-6">
            <label class="form-label">Patient Name</label>
            <input type="text" class="form-control" name="name" required />
          </div>
          <div class="col-md-3">
            <label class="form-label">Age</label>
            <input type="number" class="form-control" name="age" required />
          </div>
          <div class="col-md-3">
            <label class="form-label">Sex</label>
            <select name="sex" class="form-select" required>
              <option value="">Select</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </div>

          <div class="col-md-6">
            <label class="form-label">Referred By</label>
            <input type="text" class="form-control" name="refby" />
          </div>
          <div class="col-md-3">
            <label class="form-label">Reference No</label>
            <input type="text" class="form-control" name="refno" />
          </div>
          <div class="col-md-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" name="date" required />
          </div>
        </div>

        <hr />
        <h5>Complete Blood Count</h5>
        <div class="row g-3">
          <% Object.keys(testDefaults).forEach((test, index) => { %>
            <div class="col-md-6">
              <label class="form-label"><%= test %></label>
              <input type="text" class="form-control" name="<%= test %>" />
            </div>
          <% }) %>
        </div>

        <hr />
        <h5>Serology</h5>
        <div class="row g-3 mb-4">
          <div class="col-md-6">
            <label class="form-label">Widal Test</label>
            <input type="text" class="form-control" name="widalTest" />
          </div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary px-4">Generate Report</button>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
